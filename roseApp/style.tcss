Screen {
    layout: grid;
    grid-size: 1;
    grid-rows: 1fr;
}

#bag-filter-switch > .switch--slider {
    background: $accent;
    color: $warning;
    border: $border;
}

#status-bar {
    dock: bottom;
    height: 2;
    margin: 0;
    padding: 0 1;
}

#status {
    width: 100%;
    height: 1;
    content-align: left middle;
    padding: 0 1;
    color: $foreground;
}

#status.success {
    color: $success;
}

#status.error {
    color: $error;
}

#status.warning {
    color: $warning;
}



#file-explorer-area {
    width: 30%;
    height: 100%;
    dock: left;
}

DirectoryTree > .tree--guides {
    color: $primary;
}

TopicTree > .tree--guides {
    color: $primary;
}

BagSelector {
    background: $surface;
    border: $border;
    padding: 1; 
    height: 100%;
}

#topics-area {
    height: 50%;
}
#control-panel-container{
    height: 20%;
}
#tasks-table-container{
    height: 30%;
}

TopicTree {
    width: 60%;
    background: $surface;
    border: $border;
    padding: 1; 
}
Placeholder {
    width: 40%;
    background: $surface;
    border: $border;
}

ControlPanel {
    width: 100%;
    layout: horizontal;
}

#control-panel-top{
    height: 60%;
}
#control-panel-bottom{
    height: 40%;
}


#time-range-container1, #time-range-container2{
    width: 25%;
    padding: 0 1;
}
#output-file-container {
    width: 50%;
    padding: 0 1;
}


#time-range-container1 > .time-input,
#time-range-container2 > .time-input {
    width: 100%;
    padding: 0;
    background: $panel;
    border: none;
    text-align: center;
}

#time-range-container1 > .time-input:hover,
#time-range-container2 > .time-input:hover {
    border: none;
    padding: 0;
    color: $accent;
}

#output-file-container > .file-input {
    width: 100%;
    padding: 0;
    background: $panel;
    border: none;
}

#output-file-container > .file-input:hover {
    border: none;
    padding: 0;
    color: $accent;
}

TaskTable {
    width: 100%;
    height: 100%;
    border: $border;
    background: $surface;
    color: $foreground;
}


TaskTable.has-header  > .datatable--header {
    background: $primary-darken-2;
    color: $background;
}
#add-task-btn-container {
    align: right bottom;
    padding: 0;
    margin: 0;
}

Button {
    width: 15%;
    margin: 0 1;
    border: none;
    background: $button-foreground;
}


#main-container {
    layout: horizontal;
    height: 100%;
    margin: 0;
    padding: 0;
}

#right-top {
    height: 40%;
    layout: horizontal;
}

#right-top-left, #right-top-right {
    width: 40%;
    height: 100%;
    border: $border;
    margin: 1;
    background: $surface;
}

#right-middle {
    height: 20%;
    border: $border;
    margin: 1;
    background: $surface;
}

#right-bottom {
    height: 30%;
    layout: horizontal;
}

#right-bottom-left, #right-bottom-right {
    width: 50%;
    height: 100%;
    border: $border;
    margin: 1;
    background: $surface;
}

#splash-content {
    align: center middle;
}

#logo {
    color: $primary;
    content-align-horizontal: center;
}

#subtitle {
    background: $surface;
    color: $accent;
    content-align-horizontal: center;
}

#prompt {
    dock: bottom;
    content-align-horizontal: center;
    color: $warning;
}

WhitelistScreen {
    align: center middle;
}

#whitelist-container {
    width: 40%;
    height: auto;
    padding: 1;
    color: $primary;
}

#whitelist-preview {
    width: 60%;
    height: auto;
    padding: 1;
}

#whitelist-header {
    content-align: center middle;
    height: 3;
    margin-bottom: 1;
}

#whitelist-preview-header {
    content-align: center middle;
    height: 3;
    margin-bottom: 1;
}

#whitelist-select {
    color:$primary;
}

Pretty {
    width: 1fr;
    border: solid $accent;
    color: $primary;
}